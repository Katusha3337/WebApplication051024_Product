@model Product

<!DOCTYPE html>
<html>
<head>
    <title>Edit Product</title>
    <link rel="stylesheet" href="~/css/site.css" asp-href-include="~/css/*.css">
    <script src="~/js/site.js" asp-src-include="~/js/*.js"></script>
</head>
<body>
    <h1>Edit Product</h1>
    <form asp-controller="Product" asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div>
            <label asp-for="ProductName"></label>
            <input asp-for="ProductName" />
        </div>

        <div>
            <label asp-for="Price"></label>
            <input asp-for="Price" />
        </div>

        <div>
            <label asp-for="Description"></label>
            <textarea asp-for="Description"></textarea>
        </div>

        <button type="submit">Save</button>
        <a asp-controller="Product" asp-action="Index">Cancel</a>
    </form>
</body>
</html>

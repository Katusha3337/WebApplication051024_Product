@model IEnumerable<Product>

<!DOCTYPE html>
<html>
<head>
    <title>Product List</title>
    <link rel="stylesheet" href="~/css/site.css" asp-href-include="~/css/*.css">
    <script src="~/js/site.js" asp-src-include="~/js/*.js"></script>
</head>
<body>
    <h1>Products</h1>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ProductName</td>
                    <td>@product.Price</td>
                    <td>
                        <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id">Details</a> |
                        <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
